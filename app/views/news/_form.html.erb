<%= simple_form_for @news, html: {multipart: true} do |f| %>
  <% if @news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% @news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field frm_simple">
    <%= f.input :title %>
  </div>
  <div class="field">
    <%= f.input :description, as: :wysihtml5 %>
  </div>
  <div class="field frm_simple">
    <%= f.input :link %>
  </div>
  <div class="field frm_simple">
    <%= f.input :image %>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.select :category, News.categories.map { |k, v| [v.capitalize] } %>
    </div>
  </div>
  <br>
  <br>
  <div class="inline-buttons">
    <%= f.button :submit, 'Create news', class: 'create' %>
    <%= link_to 'Back', root_path,  class: "cta cta--inverse cta--inline" %>
  </div>
<% end %>
