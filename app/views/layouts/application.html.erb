<!DOCTYPE html>
<html>
<head>
  <title>ХНУРЕ Вступ</title>
  <link rel="shortcut icon" href="/images/nure.ico" type="image/x-icon">
  <meta charset="utf-8">
  <link href="https://fonts.googleapis.com/css?family=Noto+Serif:400,400i" rel="stylesheet">
  <meta name="viewport" content="width=device-width">
  <script src="https://use.typekit.net/vet1snk.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <% if controller_name == 'static_pages' %>
      <script src="http://code.jquery.com/jquery-3.2.1.min.js"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <% end %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/header' %>

  <%- if controller_name == 'static_pages' || controller_name == 'contacts' %>
    <main>
      <%= yield %>
    </main>
  <% else %>
    <main>
      <section class="section">
        <div class="inner-wrapper">
          <aside class="frame"></aside>
          <div class="content">
            <%= yield %>
         </div>
         <aside class="frame"></aside>
       </div>
     </section>
   </main>
 <% end %>

 <%= render 'layouts/footer' %>

 <%= render 'includes/login_modal' %>

 <%= javascript_include_tag 'script' %>
 <% unless controller_name == 'static_pages' %>
    <script src="http://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
 <% end %>

</body>
</html>
