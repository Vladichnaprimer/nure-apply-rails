<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:id => "authorization_modal"},format: :json) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  <br>
  <br>

  <%= f.submit "Log in", class: 'cta cta--inverse cta--inline create login'  %>
  <br>
<% end %>
<%= link_to "Sign up", new_registration_path(resource_name),  class:"cta cta--inverse cta--inline", style: 'width: 300px;' %><br />