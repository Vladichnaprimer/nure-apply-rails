<div class="rules">
  <p id="notice"><%= notice %></p>

  <h1>Редагування правил</h1>

  <table class="table table-hover">

    <tbody>
      <% @rules.each do |rule| %>
        <tr>
          <td><%= rule.title %></td>
          <td><%= rule.category %></td>
          <% if user_signed_in? && current_user.admin? %>
            <td><%= link_to 'Редагувати', edit_rule_path(rule) %></td>
            <td><%= link_to 'Видалити', rule, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Додати правило', new_rule_path,  class:"cta cta--inverse cta--inline" %>
</div>
