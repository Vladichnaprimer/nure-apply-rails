<%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
  <div class="row">
    <div class="small-12 medium-3 column">
      <label>Iм'я*</label>
    </div>
    <div class="small-12 medium-9 column">
      <%= f.text_field :name, :required => true, class: 'underline' %>
    </div>
  </div>
  <div class="row">
    <div class="small-12 medium-3 column">
      <label>Прізвище*</label>
    </div>
    <div class="small-12 medium-9 column">
      <%= f.text_field :surname, :required => true, class: 'underline' %>
    </div>
  </div>
  <div class="row">
    <div class="small-12 medium-3 column">
      <label class="text-nowrap">Email*</label>
    </div>
    <div class="small-12 medium-9 column">
      <%= f.text_field :email, :required => true, class: 'underline' %>
    </div>
  </div>
  <div class="row">
    <div class="small-12 column">
      <%= f.text_area :message, :as => :text, :required => true, class: 'full', rows: '10' %>
    </div>
  </div>
  <div class="row">
    <div class="small-12 column">
      <p class="form__hint text-italic text-grey">* Обов'язкові поля</p>
      <%= f.submit 'Вiдправити', id: 'submit', class: "color"  %>
    </div>
  </div>
  <br>
  <br>
<% end %>