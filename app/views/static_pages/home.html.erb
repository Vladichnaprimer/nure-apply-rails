            <% @news.each do |news| %>
              <div>
                <%= image_tag news.image, height: 171, width: 446 %>
                <h3><%= news.title %></h3>
                <p><%= news.description.html_safe%></p>
                <a href="" class="link">LINK</a>
              </div>
            <% end %>
          </div>
        </div>
        <div class="small-12 medium-5 columns text-center beratung">
