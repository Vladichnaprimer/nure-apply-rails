<section class="section news__wrapper">
  <div class="inner-wrapper">
    <aside class="frame"></aside>
    <div class="content">
      <div class="row collapse align-spaced">
        <div class="small-12 medium-5 columns news">
          <h2 class="section__title text-left">Новости</h2>
          <div class="carousel carousel--no-arrows news__dates" data-slick='{"arrows": false, "dots": false, "slidesToShow": 3, "asNavFor": "#news__content-1", "responsive": [{"breakpoint": 500, "settings": {"centerMode": true, "centerPadding": "40px"}}]}' id="news__dates-1" style: 'display: none'>
